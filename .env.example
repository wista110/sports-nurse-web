# Database
DATABASE_URL="postgresql://username:password@localhost:5432/sports_nurse_matching"
# DATABASE_URL_UNPOOLED="postgresql://username:password@localhost:5432/sports_nurse_matching" # For Prisma <5.10

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Email Service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@sportsnursematching.com"

# File Storage
BLOB_READ_WRITE_TOKEN="your-vercel-blob-token"

# Real-time Messaging (Pusher)
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="your-pusher-cluster"

# Application Settings
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Mock Payment Settings (for MVP)
MOCK_PAYMENT_ENABLED="true"
PLATFORM_FEE_PERCENTAGE="5"
INSTANT_PAYMENT_FEE_PERCENTAGE="3"
SCHEDULED_PAYMENT_FEE_PERCENTAGE="1"

# CI/CD and Deployment
CRON_SECRET="your-cron-secret-key"
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"
VERCEL_DEPLOY_HOOK_MIGRATE="your-migration-deploy-hook-url"

# Monitoring and Error Tracking
SENTRY_DSN="your-sentry-dsn"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# Security
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"